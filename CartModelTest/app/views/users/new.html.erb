<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>
<%= form_for @user, method: :post, url: users_path do |f| %>
<div class = "col-md-8 col-md-offset-2">
	<h2>Sign Up</h2>
	<div>
		<label class = "col-sm-4 control-label">Username: </label>
		<%= f.text_field :user_name, placeholder: "username", class: "col-sm-7" %>
	</div>
	<div>
		<label class = "col-sm-4 control-label">Email: </label>
		<%= f.text_field :email, placeholder: "email", class: "col-sm-7" %>
	</div>
	<div>
		<label class = "col-sm-4 control-label">Password </label>
		<%= f.text_field :password, placeholder: "password", class: "col-sm-7" %>
	</div>
	<div>
		<label class = "col-sm-4 control-label">Password Confirmation </label>
		<%= f.text_field :password_confirmation, placeholder: "passwordconfirm", class: "col-sm-7" %>
	</div>
	<div>
		<label class = "col-sm-4 control-label">Your Full Name: </label>
		<%= f.text_field :name, placeholder: "name", class: "col-sm-7" %>
	</div>
	<div>
		<%= f.button :submit, class: "btn btn-primary form-control" %>
	</div>
</div>
<% end %>